<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: system-ui, sans-serif;
    background-size: 224px;
    color: #3f3f3f;
    font-size: 20px;
    line-height: 1.6;
  }

  body {
    margin: 0;
    overflow-x: hidden;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
    border: 1px solid gray;
    border-radius: 4px;
    padding: 2px 4px;
  }

  kbd {
    background-color: #00000008;
    border: 1px solid #8080804a;
    border-radius: 5px;
    padding: 0 3px;
  }

  .content {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
  }
</style>
