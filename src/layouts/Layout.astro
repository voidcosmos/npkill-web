---
import Nav from "../components/Nav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <meta
      name="keywords"
      content="npkill, node_modules, npm, node, javascript, tool, optimization, cli"
    />
    <meta
      property="og:title"
      content="NPKILL - Maintain your development workspace clean."
    />
    <meta
      name="description"
